execute pathogen#infect()
syntax on
filetype plugin indent on


set nobackup			" Turn off automatic backups (~files)
set number			" Turn on line numbering

set autoindent			" Turn on autoindentation
set tabstop=3			" Columns per tab
set shiftwidth=3		" Columns per autoindent

syntax enable			" Syntax highlighting!

set softtabstop=3
set expandtab

"set background=dark		" The Solarized dark theme ("light" works too")
colorscheme dracula   	" Use heroku

set t_Co=16			" Set terminal colors to 16 instead of 8.



